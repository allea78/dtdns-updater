# Variables that you have to configure
HOST=hostname
PASSWD=password
DOMAIN=mydomain.com
#############################

IPADDR=$(curl icanhazip.com)
LASTIP=$(nslookup $HOST.$DOMAIN ns1.darktech.org | grep -A1 "$HOST" | grep Address | awk '{print $2 }')

TAG="NEW-IP"

echo -n "`date` - "

if [ "$IPADDR" != "$LASTIP" ]; then
	echo -e "GET /api/autodns.cfm?id=$HOST&pw=$PASSWD&client=BSD HTTP/1.1\nHost: www.dtdns.com\nUser-Agent: bash\n\n" | \
         nc www.dtdns.com 80 > /dev/null 2>&1
	echo "Sent ip change request to dtdns (from $LASTIP to $IPADDR)"
else
	echo "Your public ip is alread configure on dtdns"
	exit 1
fi

# VERIFICA
# TODO: 10 secondi non son o assolutamente sufficienti
sleep 10;

LASTIP=$(nslookup $ID.$DOMAIN ns1.darktech.org | grep -A1 $ID | grep Address | awk '{print $2 }')
        if [ "$IPADDR" != "$LASTIP" ]; then
                echo "An error is occurred!" ;
		logger DTDNS An error is occurred ;
                exit 1 ;
        else
                echo "Change successfully!" ;
                echo "Posted IP change from $LASTIP to $IPADDR"
                logger Change IP "$IPADDR" -t $TAG ;
		exit 2 ;
        fi
